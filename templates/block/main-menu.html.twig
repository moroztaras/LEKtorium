{% extends "system/nav.html.twig" %}
{% block block_class %}main-menu menu--main-menu{% endblock %}
{% block block_title_wrap %}{% endblock %}
{% block block_content %}
    <input type="checkbox" class="main-menu-input" id="main-menu-input">
    <label for="main-menu-input">Hamburger</label>
    <ul class="menu">
        <li class="menu-item"><a href="#" class="active">Home</a></li>
        <li class="menu-item"><a href="#">Articles</a></li>
        <li class="menu-item"><a href="#">Contacts</a></li>
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <li class="menu-item"><a href="{{ path('article_new') }}">New article</a></li>
            {{ render(controller('App\\Controller\\PageController::user')) }}
            <li class="menu-item"><a href="{{ path('app_logout') }}">Logout</a></li>
        {% else %}
            <li class="menu-item"><a href="{{ path('app_login') }}">Log in</a></li>
            <li class="menu-item"><a href="{{ path('app_registration') }}">Registration</a></li>
        {% endif %}
    </ul>
{% endblock %}

<div class="fields">
    {% set path = path('article_view', {id:tag.article.id}) %}
    <h2 class="field field-title"><a href="{{ path }}">{{ tag.article.title }}</a></h2>
    <div class="field field-info">
        <span class="info-title">Author:</span> {{ tag.article.user.lastName }} {{ tag.article.user.firstName }} <span class="info-title">| CreatedAt:</span> {{ tag.article.createdAt ? tag.article.createdAt|date('Y-m-d H:i') : '' }} <span class="info-title">| Comments:</span> {{ tag.article.comments | length }}
    </div>
    <div class="field field-body">{{ tag.article.text }}</div>
    <div class="field field-like">
        <a href="{{ path('article_like_add', {id:tag.article.id}) }}">like</a> ({{ tag.article.likes |length }}) |
        {{ include('tag/list.html.twig', {'tags' : tag.article.tags}) }}
    </div>
    <hr align="center" width="100%" size="1" color="#C0C0C0" />
</div>
